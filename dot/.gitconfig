[core]
  editor = vim
  pager = diff-so-fancy | less --tabs=4 -RFX
  autocrlf = input
[format]
  pretty = full
[alias]
  up = "!f() { git checkout $1 && git pull origin $1; }; f"
  prune = "!f() { git branch | grep -v "$1" | xargs git branch -D; }; f"
[user]
  email = vndhero@gmail.com
  name = Hero
[pull]
  rebase = true
[push]
  default = simple
[rebase]
  autoStash = true
[fetch]
  prune = true
[grep]
  lineNumber = true
[credential]
  helper = store
[pager]
  branch = false
[color]
  ui = true
  diff-highlight.oldNormal    = red bold
  diff-highlight.oldHighlight = red bold 52
  diff-highlight.newNormal    = green bold
  diff-highlight.newHighlight = green bold 22
  diff.meta       = yellow
  diff.frag       = magenta
  diff.func       = 146
  diff.context    = normal
  diff.old        = red bold
  diff.new        = green bold
  diff.whitespace = red reverse
[interactive]
  diffFilter = diff-so-fancy --patch
